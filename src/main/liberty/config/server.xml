<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>localConnector-1.0</feature>
        <feature>webProfile-8.0</feature>
    </featureManager>

    <!-- JDBC config -->
    <dataSource id="jdbc/KontoDS" jdbcDriverRef="Derby" jndiName="jdbc/KontoDS"
                type="javax.sql.XADataSource">
        <properties.derby.client databaseName="konto" createDatabase="create" 
                    serverName="localhost" portNumber="1527" user="APP" password="APP" />
    </dataSource>

    <jdbcDriver id="Derby" libraryRef="DerbyJDBCJar" javax.sql.XADataSource="org.apache.derby.jdbc.ClientXADataSource"/>
    <library filesetRef="DerbyFileset" id="DerbyJDBCJar"/>
    <fileset dir="/Users/pbrune/db-derby-10.16.1.1-bin/lib" id="DerbyFileset"
             includes="*.jar"/>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>
    <applicationMonitor updateTrigger="mbean"></applicationMonitor>

    <!-- Default SSL configuration enables trust for default certificates from the Java runtime --> 
    <ssl id="defaultSSLConfig" trustDefaultCerts="true" />
</server>
